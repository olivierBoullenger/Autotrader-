{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    the best cars on the web
{% endblock %}
{% block body %}
    <h1>our offer</h1>
    <div class="float-right">
    {{ form_start(form, { attr: { class: 'form-inline'}}) }}
    {{ form_widget(form.search, { attr: {placeholder: 'Search'}}) }}
    <button type="submit" class="btn btn-secondary ">  Search: </button>
        {{ form_errors(form.search) }}

    {{ form_end(form) }}
        <br>
    </div>
    <table class="table">
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Promoted</th>
            <th>Price</th>
            <th>Details</th>

        </tr>
        {% for car in cars %}
            <tr>
                <td>{{ car.make.name }}</td>
                <td>{{ car.model.name }}</td>
                <td>{% if car.promote %}  <i class="far fa-check-circle"></i>
                    {% else %}
                        <i class="far fa-times-circle"></i>
                    {% endif %}
                </td>
                <td>{{ car.price }}</td>
                <td><a href="{{ url('show_car', {id:car.id }) }}">Show details</a></td>
            </tr>

        {% endfor %}

    </table>
{% endblock %}
